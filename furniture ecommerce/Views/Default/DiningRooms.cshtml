@{
    var DiningTableModel = ViewBag.DiningTableModel;
    var SideboardsModel = ViewBag.SideboardsModel;
    var KitchenTableModel = ViewBag.KitchenTableModel;
}



<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Dining Rooms</h1>
            <p class="lead fw-normal text-white-50 mb-0">Meet your Dining Room needs</p>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="text-left mb-4">DINING TABLES</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (DiningTableModel != null && DiningTableModel.Count > 0)
            {
                @foreach (var sofa in DiningTableModel)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <a class="button" href="/Default/Detail/@sofa.ProductID"><img class="card-img-top" src="@sofa.ProductImage" alt="..." /></a>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@sofa.ProductName</h5>
                                    $@sofa.ProductPrice
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No sofas available.</p>
            }
        </div>
    </div>

    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="text-left mb-4">SIDEBOARDS</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (SideboardsModel != null && SideboardsModel.Count > 0)
            {
                @foreach (var chair in SideboardsModel)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <a class="button" href="/Default/Detail/@chair.ProductID"><img class="card-img-top" src="@chair.ProductImage" alt="..." /></a>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@chair.ProductName</h5>
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <span class="text-muted text-decoration-line-through">$2000.00</span>
                                    @chair.ProductPrice
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No chairs available.</p>
            }
        </div>
    </div>
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="text-left mb-4">KITCHEN TABLES</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (KitchenTableModel != null && KitchenTableModel.Count > 0)
            {
                @foreach (var chair in KitchenTableModel)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <a class="button" href="/Default/Detail/@chair.ProductID"><img class="card-img-top" src="@chair.ProductImage" alt="..." /></a>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@chair.ProductName</h5>
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <span class="text-muted text-decoration-line-through">$2000.00</span>
                                    @chair.ProductPrice
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No chairs available.</p>
            }
        </div>
    </div>
</section>
